<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/circular_widget_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/circular_index_color"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/green_circle">


        <TextView
            android:id="@+id/circular_pm_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_mono_medium"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="@string/pmScale"
            android:textAppearance="@style/pmScaleCircle" />

        <TextView
            android:id="@+id/circular_pm_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_mono_medium"
            android:gravity="center"
            android:text="@string/pmValue"
            android:textAppearance="@style/pmValueCircle"
            android:textFontWeight="600"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/circular_pm_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_mono_medium"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:text="@string/pmUnit"
            android:textAppearance="@style/pmUnitCircle" />


    </RelativeLayout>

    <TextView
        android:id="@+id/circular_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circular_index_color"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/wandegeya"
        android:textAppearance="@style/wandegeyaCircle"
        android:textFontWeight="500"
        tools:targetApi="p" />

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circular_index_color"
        android:layout_toStartOf="@+id/circular_location"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/location_icon"
        android:layout_marginEnd="-50dp"
        android:src="@drawable/location_icon" />

    <TextView
        android:id="@+id/circular_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circular_location"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/dateCircle"
        android:textAppearance="@style/wandegeyaCircle" />

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circular_location"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/circular_date"
        android:contentDescription="@string/refresh_icon"
        android:src="@drawable/refresh_circle" />

</RelativeLayout>